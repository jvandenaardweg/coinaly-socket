{
  "name": "coinaly-socket",
  "description": "Websocket server for coinaly.io",
  "version": "1.0.0",
  "scripts": {
    "start": "./node_modules/forever/bin/forever websocket-server.js",
    "dev": "nodemon websocket-server.js | nodemon workers.js",
    "start:docker": "node socketcluster/dockerwait.js && node ${SOCKETCLUSTER_MASTER_CONTROLLER:-server.js}",
    "start:workers": "./node_modules/forever/bin/forever workers.js",
    "dev:workers": "nodemon workers.js",
    "test": "jest --forceExit",
    "test:watch": "jest --watch"
  },
  "jest": {
    "moduleFileExtensions": [
      "js"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/app/$1"
    },
    "collectCoverageFrom": [
      "app/**/*.{js}",
      "!**/node_modules/**"
    ],
    "testEnvironment": "jest-environment-node",
    "coverageDirectory": "<rootDir>/test/unit/coverage",
    "collectCoverage": true
  },
  "dependencies": {
    "autobahn": "^18.3.2",
    "axios": "^0.18.0",
    "ccxt": "^1.14.10",
    "cli-table": "^0.3.1",
    "connect": "^3.6.6",
    "dotenv": "^5.0.1",
    "express": "^4.16.3",
    "forever": "^0.15.3",
    "interval-promise": "^1.1.1",
    "ioredis": "^3.2.2",
    "jest": "^22.4.3",
    "joi": "^13.3.0",
    "jsonic": "^0.3.0",
    "md5": "^2.2.1",
    "minimist": "^1.2.0",
    "moment": "^2.22.1",
    "morgan": "^1.9.0",
    "newrelic": "^4.1.1",
    "nodemon": "^1.17.4",
    "raven": "^2.6.2",
    "sc-errors": "^1.4.0",
    "sc-framework-health-check": "^2.0.0",
    "sc-hot-reboot": "^1.0.0",
    "scc-broker-client": "^5.0.2",
    "serve-static": "^1.13.2",
    "signalr-client": "0.0.17",
    "socket.io-client": "^2.1.0",
    "socketcluster": "^13.1.3",
    "socketcluster-client": "^13.0.0",
    "ws": "^5.1.1",
    "zlib": "^1.0.5"
  },
  "devDependencies": {
    "concurrently": "^3.5.1"
  }
}
